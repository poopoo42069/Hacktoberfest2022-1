import random

Top_of_range = input("Type a number: ")

if Top_of_range.isdigit():
    Top_of_range = int(Top_of_range)

    if Top_of_range: Top_of_range>0
    print('Please type a number greater than 0.')
    quit()
else:
     print('Please type a number greater than 0.')
quit()
random_number = (random.randint(0, Top_of_range))
print(random_number)